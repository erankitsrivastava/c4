<?xml version='1.0' encoding='utf-8'?>
<widget id="org.myapp.sample" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>C4-Connect Four</name>
    <description>
        c4, stands for Connect Four, is a browser game written in TypeScript and utilizes HTML's canvas. Player is playing against an AI that uses Minimax algorithm and alpha-beta pruning. The evaluation function is hard-coded, and hence the AI may not be moving using the most optimal move.
        Originally Developed by Kenrick(https://github.com/kenrick95)
    </description>
    <author email="01ankitsrivastava@gmail.com" href="http://phonegap.com">
        Aakash Srivastava
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-battery-status" source="npm" spec="~1.2.4" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.4.1" />
    <plugin name="cordova-plugin-media-capture" source="npm" spec="~1.4.3" />
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.3" />
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" source="npm" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" source="npm" spec="~2.1.5" />
    <platform name="android">
        <icon density="ldpi" src="www/res/c4logo.png" />
        <icon density="mdpi" src="www/res/c4logo.png" />
        <icon density="hdpi" src="www/res/c4logo.png" />
        <icon density="xhdpi" src="www/res/c4logo.png" />
        <icon density="xxhdpi" src="www/res/c4logo.png" />
        <icon density="xxxhdpi" src="www/res/c4logo.png" />
        <splash density="land-ldpi" src="www/res/c4logo.png" />
        <splash density="land-mdpi" src="www/res/c4logo.png" />
        <splash density="land-hdpi" src="www/res/c4logo.png" />
        <splash density="land-xhdpi" src="www/res/c4logo.png" />
        <splash density="land-xxhdpi" src="www/res/c4logo.png" />
        <splash density="land-xxxhdpi" src="www/res/c4logo.png" />
        <splash density="port-ldpi" src="www/res/c4logo.png" />
        <splash density="port-mdpi" src="www/res/c4logo.png" />
        <splash density="port-hdpi" src="www/res/c4logo.png" />
        <splash density="port-xhdpi" src="www/res/c4logo.png" />
        <splash density="port-xxhdpi" src="www/res/c4logo.png" />
        <splash density="port-xxxhdpi" src="www/res/c4logo.png" />
    </platform>
    <platform name="wp8">
        <icon height="99" platform="wp8" src="www/res/c4logo.png" width="99" />
        <icon height="159" platform="wp8" src="www/res/c4logo.png" width="159" />
        <splash height="1280" platform="wp8" src="www/res/c4logo.png" width="768" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
